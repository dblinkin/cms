<?xml version="1.0" encoding="utf-8"?>
<ReleaseConfig>
	<Release Src="MAIN_PAGE" Template="index.ftl" FilenameFormat="/index.html">
		<Model>com.ftd.manage.release.model.ChannelModel</Model>
		<Model>com.ftd.manage.release.model.NoticeModel</Model>
	</Release>
	<Release Src="FIRST_CHANNEL" Template="first_channel.ftl" FilenameFormat="/article/{first_channel}.html">
		<Model>com.ftd.manage.release.model.ChannelModel</Model>
		<Model>com.ftd.manage.release.model.ArticleIndexModel</Model>
		<AfterRelease>com.ftd.manage.release.check.ChannelAfterRelease</AfterRelease>
	</Release>
	<Release Src="SECOND_CHANNEL" Template="second_channel.ftl" FilenameFormat="/article/{first_channel}/{second_channel}.html">
		<Model>com.ftd.manage.release.model.ChannelModel</Model>
		<Model>com.ftd.manage.release.model.ArticleIndexModel</Model>
		<AfterRelease>com.ftd.manage.release.check.ChannelAfterRelease</AfterRelease>
	</Release>
	<Release Src="ARTICLE" Template="article.ftl" FilenameFormat="/article/{first_channel}/{second_channel}/{yyyy}{mm}{dd}/{rand:6}{time}.html">
		<Model>com.ftd.manage.release.model.ChannelModel</Model>
		<Model>com.ftd.manage.release.model.ArticleModel</Model>
		<AfterRelease>com.ftd.manage.release.check.ArticleAfterRelease</AfterRelease>
	</Release>
	<Release Src="PREVIEW" Template="article.ftl" FilenameFormat="/article/{first_channel}/{second_channel}/{yyyy}{mm}{dd}/{rand:6}{time}.html">
		<Model>com.ftd.manage.release.model.ChannelModel</Model>
	</Release>
</ReleaseConfig>